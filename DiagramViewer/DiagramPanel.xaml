<UserControl x:Class="DiagramPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:s="clr-namespace:DiagramViewer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             MinHeight="1cm" MinWidth="1cm"
             RenderTransformOrigin="0.5,0.5"
             SnapsToDevicePixels="True"  IsTabStop = "False">

    <UserControl.Template>
        <ControlTemplate TargetType="s:DiagramPanel">
            <Grid>
                <ContentPresenter />
                <Grid Name="ConnectorsGrid">
                    <TextBlock x:Name="PART_Text" IsHitTestVisible="False" TextAlignment="Center"
                                   HorizontalAlignment="Center"  VerticalAlignment="Center" RenderTransformOrigin="0.5, 0.5"/>
                </Grid>
            </Grid>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
