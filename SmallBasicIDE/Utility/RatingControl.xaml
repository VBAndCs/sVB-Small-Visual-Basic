<Control x:Class="Microsoft.SmallBasic.Utility.RatingControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="120" Height="18" xmlns:utility="clr-namespace:Microsoft.SmallBasic.Utility;assembly=SB">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <Style x:Key="{x:Type Polygon}" TargetType="{x:Type Polygon}">
        <Setter Property="Height" Value="16" />
        <Setter Property="Polygon.Points" Value="9,1 11,6 17,6 12,10 15,16 9,12 3,16 6,10 1,6 7,6" />
        <Setter Property="Fill" Value="#DDDDDD" />
        <Setter Property="Stroke" Value="#666666" />
        <Setter Property="Margin" Value="1,1,0,1" />
        <Setter Property="StrokeThickness" Value="1.5" />
      </Style>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Control.Template>
    <ControlTemplate>
      <ItemsControl ItemsSource="{Binding Path=Stars, RelativeSource={RelativeSource TemplatedParent}}">
        <Control.Template>
          <ControlTemplate>
            <StackPanel Orientation="Horizontal" IsItemsHost="True" Background="#00FFFFFF" />
          </ControlTemplate>
        </Control.Template>
      </ItemsControl>
    </ControlTemplate>
  </Control.Template>
</Control>