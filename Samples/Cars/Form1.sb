Direction_Left = 3
Direction_Right = 4


StartMove = False
EndGame = False
Braking = False
a = 0.2

MyCarData = CreateCar("MyCar", 255, 30, Me.Width/2 - 25, Me.Height - 250, "Cars\0.gif")
Cars[0] = MyCarData

