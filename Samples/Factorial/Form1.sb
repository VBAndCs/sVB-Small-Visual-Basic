Sub Button1_OnClick   
   n = TextBox1.Text
   If Text.IsNumeric(n) and n <= 20 Then      
      TextBox2.Text = Factorial(n)
   else
      TextBox2.Text = "Value is not valid."
   endif    
EndSub


function Factorial(n)
   If n < 2 Then
      Return 1
   else
      Return n * factorial(N - 1)
   EndIf   
EndFunction



