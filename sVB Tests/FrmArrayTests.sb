Function Test_AddItem()
   a = {}
   a = Array.AddItem(a, "First item")
   a = Array.AddItem(a, "Second item")
   a = Array.AddItem(a, "Third item")
   
   Return UnitTest.AssertEqual(
      a,
      {"First item", "Second item", "Third item"},
      "Array.AddItem"
   )
EndFunction

