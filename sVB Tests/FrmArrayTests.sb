Function Test_Join()
   a = {1, 2, 3}
   b = {10, 20, 30}
   c = Array.RemoveItem({"a", "b", "c", "d"}, 2)
   
   Return UnitTest.AssertEqual(
      {
         a.Join(","),
         Array.Join(b, ", "),
         c.Join("")
      },
      {
         "1,2,3",
         "10, 20, 30",
         "acd"
      },
      "Array.Join"
   )
EndFunction


