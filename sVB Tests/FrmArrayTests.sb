Function Test_IsArray()
   a!Name = "Adam"
   a!Age = 10
   
   Return UnitTest.AssertEqual(
      {
         Array.IsArray({}),
         Array.IsArray({1, 2, 3}),
         Array.IsArray(Text.Split("1, 2", ",", False, False)),
         Array.IsArray(10),
         Array.IsArray(#1/2/2022#),
         Array.IsArray("Test"),
         Array.IsArray(""),
         Array.IsArray(a)
      },
      {True, True, True, False, False, False, False, True},
      "Array.IsArray"
   )
EndFunction


