Function Test_Find()
   a = {1, 2, 3, "Adam"}
   a["Name"] = "Adam"
   a!Age = 15
   
   Return UnitTest.AssertEqual(
      {
         a.Find(3, 1, True),
         a.Find(3, 4, True),
         a.Find("adam", 2, True),
         a.Find("adam", 3, False),
         a.Find("adam", 5, True),
         a.Find("10", 1, True),
         a.Find(15, 1, True)
      },
      {3, "", 4, "", "Name", "", "Age"},
      "Array.Find"
   )
   
EndFunction


